{
  "roles": [
    {
      "name": "admin",
      "description": "Administrator with full access",
      "permissions": [
        "*:*"
      ]
    },
    {
      "name": "reader",
      "description": "Read-only access to resources",
      "permissions": [
        "*:describe",
        "*:read",
        "*:list"
      ]
    },
    {
      "name": "infrastructure",
      "description": "Infrastructure agent role",
      "permissions": [
        "ansible:*",
        "jenkins:*",
        "terraform:*",
        "cloudformation:*"
      ]
    },
    {
      "name": "security",
      "description": "Security agent role",
      "permissions": [
        "terraform:read",
        "cloudformation:read",
        "security:*",
        "jenkins:read",
        "ansible:read"
      ]
    },
    {
      "name": "vault",
      "description": "Vault agent role",
      "permissions": [
        "secrets:*",
        "vault:*"
      ]
    },
    {
      "name": "jira",
      "description": "Jira agent role",
      "permissions": [
        "jira:*"
      ]
    },
    {
      "name": "github",
      "description": "GitHub agent role",
      "permissions": [
        "github:*",
        "git:*"
      ]
    },
    {
      "name": "confluence",
      "description": "Confluence agent role",
      "permissions": [
        "confluence:*"
      ]
    },
    {
      "name": "kubernetes",
      "description": "Kubernetes agent role",
      "permissions": [
        "kubernetes:*"
      ]
    },
    {
      "name": "argocd",
      "description": "ArgoCD agent role",
      "permissions": [
        "kubernetes:read",
        "argocd:*",
        "kubernetes:list"
      ]
    }
  ],
  "agent_roles": {
    "infrastructure": [
      "infrastructure"
    ],
    "architecture": [
      "reader"
    ],
    "security": [
      "security"
    ],
    "cost": [
      "reader"
    ],
    "terraform_module": [
      "reader"
    ],
    "jira": [
      "jira"
    ],
    "confluence": [
      "confluence"
    ],
    "github": [
      "github"
    ],
    "nexus": [
      "reader"
    ],
    "kubernetes": [
      "kubernetes"
    ],
    "argocd": [
      "argocd"
    ],
    "vault": [
      "vault"
    ],
    "security_scanner": [
      "reader"
    ],
    "deployment": [
      "reader"
    ],
    "onboarding": [
      "reader"
    ]
  }
}