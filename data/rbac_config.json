{
  "roles": [
    {
      "name": "admin",
      "description": "Administrator with full access",
      "permissions": [
        "*:*"
      ]
    },
    {
      "name": "reader",
      "description": "Read-only access to resources",
      "permissions": [
        "*:read",
        "*:describe",
        "*:list"
      ]
    },
    {
      "name": "infrastructure",
      "description": "Infrastructure agent role",
      "permissions": [
        "ansible:*",
        "jenkins:*",
        "terraform:*",
        "cloudformation:*"
      ]
    },
    {
      "name": "security",
      "description": "Security agent role",
      "permissions": [
        "ansible:read",
        "security:*",
        "terraform:read",
        "cloudformation:read",
        "jenkins:read"
      ]
    },
    {
      "name": "vault",
      "description": "Vault agent role",
      "permissions": [
        "vault:*",
        "secrets:*"
      ]
    },
    {
      "name": "jira",
      "description": "Jira agent role",
      "permissions": [
        "jira:*"
      ]
    },
    {
      "name": "github",
      "description": "GitHub agent role",
      "permissions": [
        "github:*",
        "git:*"
      ]
    },
    {
      "name": "confluence",
      "description": "Confluence agent role",
      "permissions": [
        "confluence:*"
      ]
    },
    {
      "name": "kubernetes",
      "description": "Kubernetes agent role",
      "permissions": [
        "kubernetes:*"
      ]
    },
    {
      "name": "argocd",
      "description": "ArgoCD agent role",
      "permissions": [
        "argocd:*",
        "kubernetes:list",
        "kubernetes:read"
      ]
    }
  ],
  "agent_roles": {}
}